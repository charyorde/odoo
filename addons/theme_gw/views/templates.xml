    <template id="footer_default" inherit_id="website.footer_default" customize_show="True" name="Automatic Footer">
        <xpath expr="//div[@class='row']" position="replace">
        </xpath>
    </template>
    <template id="layout_footer_copyright" inherit_id="website.layout_footer_copyright" name="Footer Copyright">
        <xpath expr="//footer//div[@class='container mt16 mb8']" position="replace">
        <div class="container mt16 mb8">
          <div class="pull-right" t-ignore="true" t-if="not editable">
            </div>
          <div class="pull-left text-muted">
                Copyright &amp;copy; <span t-field="res_company.name">Company name</span>
            </div>
        </div>
