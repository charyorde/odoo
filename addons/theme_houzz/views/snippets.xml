<?xml version="1.0"?>
<openerp>
  <data>
    <template id="snippet_newsletter_optin">
      <section id="mailing-list">
        <div class="container">
          <h3>Join our mailing list</h3>
          <div class="oe_snippet_body input-group js_subscribe" data-list-id="0">
            <input type="email" name="email" class="js_subscribe_email form-control" placeholder="your email..."/>
            <span class="input-group-btn">
              <a href="#" class="btn btn-primary js_subscribe_btn">Subscribe</a>
              <a href="#" class="btn btn-success js_subscribed_btn hidden" disabled="disabled">Thanks</a>
            </span>
            <div class="alert alert-success hidden">Thanks for your subscription!</div>
          </div>
        </div>
      </section>
    </template>
    <template id="newsletter_optin" inherit_id="website.snippets">
      <xpath expr="//div[@id='snippet_structure']" position="inside">
        <t t-snippet="theme_houzz.snippet_newsletter_optin" t-thumbnail="/theme_houzz/static/src/img/mailing-list-backdrop.png"/>
        <t t-snippet="theme_houzz.paynow" t-thumbnail="/theme_houzz/static/src/img/pay-button.png"/>
      </xpath>
    </template>
    <template id="paynow">
        <div id="pay-btn-email"></div>
    </template>
  </data>
</openerp>
