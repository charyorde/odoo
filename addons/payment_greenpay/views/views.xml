<?xml version="1.0"?>
<openerp>
    <data>
        <record id="paystack_acquirer_form" model="ir.ui.view">
            <field name="name">payment.paystack.acquirer.form</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='fees_active']" position="after">
                    <field name="paystack_api_access_token" attr="{'invisible': [('provider', '!=', 'paystack')]}"/>
                    <field name="paystack_api_test_access_token" attr="{'invisible': [('provider', '!=', 'paystack')]}"/>
                </xpath>
            </field>
        </record>
  </data>
</openerp>
