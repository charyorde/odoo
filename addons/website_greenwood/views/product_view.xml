<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record model="ir.ui.view" id="product_template_form_view">
      <field name="name">product.template.form.greenwood.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <group name="sale_condition" position="inside">
          <group string="Finance Structure" name="gw_fin_structure">
            <field name="fin_structure"/>
            <field name="fin_structure_desc"/>
            <field name="fin_note"/>
          </group>
        </group>
        <group name="website_and_pos" position="inside">
          <group string="Greenwood Sales Promo" name="gw_sales_promo">
            <field name="promo_image" widget="gwinputfile"/>
            <field name="promo_image_scale" on_change="onchange_promo_image_scale(promo_image_scale)"/>
            <field name="block_type" on_change="onchange_block_type(block_type)"/>
            <field name="promo_sale"/>
          </group>
        </group>
        <!--page string="Sales" position="after">
          <page name="financing" string="Financing">
            <group string="Finance Structure" name="gw_fin_structure">
              <field name="fin_structure"/>
              <field name="fin_structure_desc"/>
              <field name="fin_note"/>
            </group>
          </page>
        </page-->
      </field>
    </record>
  </data>
</openerp>
